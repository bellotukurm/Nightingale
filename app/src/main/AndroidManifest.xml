<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.songily">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AllSongsActivity"></activity>
        <activity android:name=".GiveUpActivity" />
        <activity android:name=".VerdictActivityCollected" />
        <activity android:name=".GuessPageCollection" />
        <activity android:name=".GuessCollectionArchive" />
        <activity android:name=".LearnPage" />
        <activity android:name=".AR2" />
        <activity android:name=".ActivityMap2" />
        <activity android:name=".VerdictActivity" />
        <activity android:name=".RecyclerAdapter" />
        <activity android:name=".GuessCollectionAdder" />
        <activity android:name=".GuessPage1" />
        <activity android:name=".AR1" />
        <activity android:name=".ActivityMap1" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_API_key" />

        <activity android:name=".PlayPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>